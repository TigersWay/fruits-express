---
title: Administration
layout: html.njk
permalink: /admin/
section:
  appliedLocale: en-US
eleventyExcludeFromCollections: true
---
  <section class="container px-4 py-2 mx-auto my-4 border max-w-7xl">
    <details><summary><h2 class="inline-block text-2xl font-bold">Fruits</h2></summary>
      <ul class="space-y-1 list-none">
      {% for fruit in fruits | sort(attribute='id') %}
        <li>
          <img class="inline-block w-12 h-10 rounded-full ring-2 ring-white" src="{{ fruit.image }}" alt="{{ fruit.id }}">
          <a href="{{ fruit.id | slugify }}" target="_blank">{{ fruit.title.en }} / {{ fruit.title.th }}</a>
          <span>{{ fruit.price }}</span>
        </li>
      {% endfor %}
      </ul>
    </details>
  </section>

  <section class="container px-4 py-2 mx-auto my-4 border max-w-7xl">
    <details><summary><h2 class="inline-block text-2xl font-bold">Collections/Pages</h2></summary>
      <details class="ml-2"><summary><h3 class="inline-block font-bold">EN</h3></summary>
        <ul class="space-y-1 list-none">
        {% for item in collections.en | sort(attribute='url') %}
          <li>{{ item.url }}</li>
        {% endfor %}
        </ul>
      </details>
      <details class="ml-2"><summary><h3 class="inline-block font-bold">TH</h3></summary>
        <ul class="space-y-1 list-none">
        {% for item in collections.th | sort(attribute='url') %}
          <li>{{ item.url }}</li>
        {% endfor %}
        </ul>
      </details>
    </details>
  </section>

  <section class="container px-4 py-2 mx-auto my-4 border max-w-7xl">
    <details><summary><h2 class="inline-block text-2xl font-bold">Collections.all (loop)</h2></summary>
      <ul class="space-y-1 list-none">
      {% for item in collections.all %}
        <li>
          {{ item  | debug(2, true, ['template', 'templateContent', '_templateContent']) | safe }}
          {# {{ item.data.tags  | debug | safe }} #}
        </li>
      {% endfor %}
      </ul>
    </details>
  </section>
