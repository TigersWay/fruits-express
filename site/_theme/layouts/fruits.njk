---
layout: base.njk
pagination:
  data: fruits
  size: 1
  alias: fruit
  addAllPagesToCollections: true
permalink: "{{ section.prefix + '/fruit/' + (fruit.id | slugify) + '/' }}"
eleventyComputed:
  title: "{{ fruit.title[section.path] }}"
---
    <div class="grid gap-4 border shadow md:grid-cols-2">
      <img class="place-self-center" src="{{ fruit.image | cdn }}" alt="{{ fruit.title[section.path] }}" width="500" height="400">
      <div class="flex flex-col justify-between gap-4 p-4">
        <h2 class="text-2xl font-bold">{{ fruit.title[section.path] }}</h2>
        <div class="markdown">{{ fruit.content[section.path] | markdown | safe }}</div>
        <div class="flex justify-between">
          <p class="text-2xl font-bold">{{ fruit.price | price }}</p>
          <p class="italic text-[80%] self-end">{{ 'Updated' | i18n }}: <span>{{ fruit.updated | dateFormat('LL') }}</span></p>
        </div>
      </div>
    </div>
